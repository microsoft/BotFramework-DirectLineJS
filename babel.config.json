{
  "env": {
    "test": {
      "plugins": ["babel-plugin-istanbul"]
    }
  },
  "plugins": [
    "@babel/plugin-transform-runtime",
    [
      "transform-inline-environment-variables",
      {
        "include": ["NODE_ENV", "node_env", "npm_package_version"]
      }
    ]
  ],
  "presets": [
    [
      "@babel/preset-env",
      {
        "forceAllTransforms": true,
        "modules": "commonjs"
      }
    ],
    "@babel/preset-typescript"
  ],
  "sourceMaps": "inline"
}
